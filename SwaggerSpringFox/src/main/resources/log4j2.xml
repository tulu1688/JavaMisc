<?xml version="1.0" encoding="ISO-8859-1"?>
<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{ISO8601} | %-5p | AMI | AppLog |  @project.name@  | %X{CorrelationId} | %t | %X{IPAddress} | %c{1} | %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>